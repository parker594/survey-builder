# Smart Survey Tool - Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ===== BASIC CONFIGURATION =====
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ===== DATABASE CONFIGURATION =====
# MongoDB Connection String
# Get from: https://www.mongodb.com/atlas (free tier available)
MONGODB_URI=mongodb://localhost:27017/smart_survey_tool
# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart_survey_tool

# Redis Connection (for caching and sessions)
# Get from: https://redis.com/ (free tier available)
REDIS_URL=redis://localhost:6379
# Example for Redis Cloud:
# REDIS_URL=redis://username:password@host:port

# ===== AUTHENTICATION =====
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# ===== AI SERVICES =====
# OpenAI API Key (REQUIRED for AI features)
# Get from: https://platform.openai.com/api-keys
# Usage: Natural language processing, question generation, response analysis
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Cloud APIs (for translation and speech services)
# Get from: https://console.cloud.google.com/
# Enable: Translate API, Speech-to-Text API, Text-to-Speech API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json
# OR use API key instead of service account:
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# ===== COMMUNICATION SERVICES =====
# Twilio (for SMS)
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
# Get from: https://developers.facebook.com/docs/whatsapp
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Email Service (SendGrid)
# Get from: https://sendgrid.com/
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@survey.mospi.gov.in
FROM_NAME="Smart Survey Tool - MoSPI"

# ===== FILE STORAGE =====
# AWS S3 (for file uploads and storage)
# Get from: https://aws.amazon.com/s3/
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smart-survey-uploads

# Local file storage (alternative to S3)
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ===== SECURITY =====
# Encryption keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-character-iv-here

# CORS settings
CORS_ORIGIN=http://localhost:3000,https://survey.mospi.gov.in
ALLOWED_ORIGINS=localhost:3000,survey.mospi.gov.in

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===== ANALYTICS & MONITORING =====
# Google Analytics (optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Application Insights (optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# ===== DEVELOPMENT TOOLS =====
# Debug mode
DEBUG=survey:*

# Seed database on startup (development only)
SEED_DATABASE=false

# Enable API documentation
ENABLE_SWAGGER=true

# ===== GOVERNMENT SPECIFIC =====
# Organization details
ORGANIZATION_NAME=Ministry of Statistics and Programme Implementation
ORGANIZATION_CODE=MOSPI
DEPARTMENT_CODE=GOI

# Digital India integration
DIGITAL_INDIA_API_KEY=your-digital-india-api-key
AADHAAR_VALIDATION_ENDPOINT=https://api.uidai.gov.in/

# ===== BACKUP & RECOVERY =====
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# ===== PERFORMANCE =====
# Cache settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Database connection pool
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# ===== FEATURE FLAGS =====
ENABLE_AI_FEATURES=true
ENABLE_MULTILINGUAL=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_SMS_INTEGRATION=true
ENABLE_VOICE_SURVEYS=false
ENABLE_OFFLINE_MODE=true

# ===== WEBHOOK ENDPOINTS =====
WEBHOOK_SECRET=your-webhook-secret-for-security
PAYMENT_WEBHOOK_URL=https://your-domain.com/webhooks/payment
SURVEY_WEBHOOK_URL=https://your-domain.com/webhooks/survey

# ===== API VERSIONING =====
API_VERSION=v1
API_BASE_PATH=/api

# ===== HEALTH CHECKS =====
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds

# ===== SESSION MANAGEMENT =====
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=86400000  # 24 hours
COOKIE_SECURE=false  # Set to true in production with HTTPS

# ===== LOCALIZATION =====
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,bn,te,ta,mr,gu,kn
TRANSLATION_CACHE_TTL=7200  # 2 hours

# ===== QUALITY ASSURANCE =====
RESPONSE_VALIDATION_THRESHOLD=0.8
ANOMALY_DETECTION_SENSITIVITY=0.7
DATA_QUALITY_MIN_SCORE=6

# ===== NOTIFICATIONS =====
ADMIN_EMAIL=admin@survey.mospi.gov.in
ALERT_EMAIL=alerts@survey.mospi.gov.in
NOTIFICATION_BATCH_SIZE=100

# ===== COMPLIANCE =====
DATA_RETENTION_DAYS=2555  # 7 years as per government norms
AUDIT_LOG_RETENTION=3650  # 10 years
GDPR_COMPLIANCE=true
PRIVACY_POLICY_URL=https://survey.mospi.gov.in/privacy